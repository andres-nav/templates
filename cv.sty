			\ifthenelse{\isundefined{\@gitlab}}%
			{}%
			{%
				\ifbool{isstart}{\setbool{isstart}{false}}{\acvHeaderSocialSep}%
				\href{https://gitlab.com/\@gitlab}{\faGitlab\acvHeaderIconSep\@gitlab}%
			}%
			\ifthenelse{\isundefined{\@bitbucket}}%
