	\fancyfoot{}
	\fancyfoot[L]{\footerstyle{\today\ifdefined\@version\acvHeaderSocialSep\insertversion\fi\ifempty{#1}{}{\acvHeaderSocialSep#1}}}
	\fancyfoot[C]{\footerstyle{\@firstname~\@lastname\ifempty{#2}{}{\acvHeaderSocialSep#2}}}
